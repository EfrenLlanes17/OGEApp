@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="top-row px-4" style="background-color: rgb(29, 29, 29); width:100%; height: 2.25cm; display: flex; align-items: center; justify-content: space-between; padding: 0 20px;">
            <!-- Left-aligned section -->
            <div style="display: flex; align-items: center; flex-direction: row-reverse;">
                <p style="color: white; font-size: 14px; font-weight: bold; margin: 0; padding-left: 0px; padding-top: 5px;font-family: 'Times New Roman', Times, serif;"><i>Project Inflow</i></p>
                <img src="images/whiteOGELogo.png" alt="OGE logo" width="100" height="35" style="margin-left: 10px;">
            </div>

            <!-- Right-aligned section -->
            <div style="font-size: 20px; text-decoration: none; color: white; font-weight: bold; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
                <select name="locations" id="locations" style="background-color: rgb(29, 29, 29); border: none; color: white; text-align: right; font-weight: bold;">
                    <option value="">Location</option>
                    <option value="Mustang PP">Mustang PP</option>
                    <option value="Peidmont PP">Peidmont PP</option>
                </select>

                <NavLink href="activity" style="text-decoration: none; color: white; margin-left: 15px;">Activity</NavLink>
                <NavLink href="map" style="text-decoration: none; color: white; margin-left: 15px;">Map</NavLink>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
